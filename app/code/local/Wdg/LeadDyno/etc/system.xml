<?xml version="1.0"?>
<config>
	<tabs>
		<wdg_extensions translate="label">
			<label>WDG Extensions</label>
			<sort_order>1000</sort_order>
		</wdg_extensions>
	</tabs>
	<sections>
		<leaddyno translate="label" module="leaddyno">
			<label>LeadDyno</label>
			<tab>wdg_extensions</tab>
			<frontend_type>text</frontend_type>
			<sort_order>0</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<general translate="label">
					<label>General Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<active translate="label">
							<label>Enable</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</active>
						<keypublic translate="label">
							<label>Public Key:</label>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</keypublic>
						<keyprivate translate="label">
							<label>Private Key:</label>
							<frontend_type>text</frontend_type>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</keyprivate>
					</fields>
				</general>
				<watcher translate="label">
					<label>Watcher Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>20</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<active translate="label">
							<label>Enable AutoWatch</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Select "Yes" if you want to capture email address of your visitors</comment>
						</active>
						<selector translate="label">
							<label>AutoWatcher Selector:</label>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Leave this field empty if you want to automatically watch all inputs on your site for a lead email or enter jQuery selectors to tell LeadDyno to watch particular inputs for a lead email</comment>
						</selector>
					</fields>
				</watcher>
			</groups>
		</leaddyno>
	</sections>
</config>